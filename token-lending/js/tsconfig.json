{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "moduleResolution": "node",
        "stripInternal": true,
        "baseUrl": "src",
        "outDir": "lib",
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": ["src", "types"],
    "exclude": ["node_modules"],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs"
    }
}
